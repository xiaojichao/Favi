<div class="container-narrow" ng-controller="PageCtrl">	
	<div ng-include src="'themeplate/header.ejs'"></div>
	<form class="form-signin" ng-submit="doSignIn();">
		<h2 class="form-signin-heading">Please sign in</h2>
		<input type="text" class="input-block-level" placeholder="Email address" ng-model="email" required>
		<input type="password" class="input-block-level" placeholder="Password" ng-model="password" required>
		<label class="checkbox">
		<input type="checkbox" value="remember-me"> Remember me
		</label>
		<button class="btn btn-large btn-primary" type="submit">Sign in</button>
	</form>
	<div ng-include src="'themeplate/footer.ejs'"></div>
</div>
<script>
	function PageCtrl($scope){
		$scope.doSignIn=function(){
			alert($scope.email + "," + $scope.password);
		};
	}
</script>